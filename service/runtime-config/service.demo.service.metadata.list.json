        "Aloha",
        "Bonjour",
        "Hallo",
        "Ciao",
        "こんにちは",
        "안영하세요"
      ]
    }
  },
  {
    "path": "/beer-sample/query",
    "paramFields": [
      {
        "name": "p1",
        "valueSpec": "String",
        "type": "Path",
        "multiValued": false,
        "constraint": {
          "type": "Required"
        }
      },
      {
        "name": "p2",
        "valueSpec": "String",
        "type": "Path",
        "multiValued": false,
        "constraint": {
          "type": "Required"
        }
      },
      {
        "name": "type",
        "valueSpec": "String",
        "type": "Query",
        "multiValued": false,
        "constraint": {
          "type": "Required"
        },
        "validation": {
          "type": "AllowedValues",
          "valueSet": [
            "brewery",
            "beer"
          ],
          "enforcement": "Strong"
        }
      },
      {
        "name": "country",
        "valueSpec": "String",
        "type": "Query",
        "multiValued": false,
        "constraint": {
          "type": "Optional"
        }
      },
      {
        "name": "state",
        "valueSpec": "String",
        "type": "Query",
        "multiValued": false,
        "constraint": {
          "type": "Optional"
        }
      },
      {
        "name": "zipcode",
        "valueSpec": "String",
        "type": "Query",
        "multiValued": false,
        "constraint": {
          "type": "Optional"
        }
      },
      {
        "name": "name",
        "valueSpec": "String",
        "type": "Query",
        "multiValued": false,
        "constraint": {
          "type": "Optional"
        }
      },
      {
        "name": "category",
        "valueSpec": "String",
        "type": "Query",
        "multiValued": false,
        "constraint": {
          "type": "Optional"
        }
      },
      {
        "name": "fetchCount",
        "valueSpec": "Integer",
        "type": "Query",
        "multiValued": false,
        "constraint": {
          "type": "Optional"
        },
        "defaultValue": "10"
      },
      {
        "name": "skipCount",
        "valueSpec": "Integer",
        "type": "Query",
        "multiValued": false,
        "constraint": {
          "type": "Optional"
        },
        "defaultValue": "10"
      }
    ],
    "executionControl": {
      "type": "Couchbase2xService",
      "repository": {
        "clientId": "test.beer-sample",
        "accessControl": {
          "n1ql.timeout": "500"
        }
      },
      "byN1QL": {
        "n1qlTemplate": {
          "optionalVariables": ["country", "state", "zipcode", "name", "category"],
          "template": "select `beer-sample`.* from `beer-sample` WHERE @{TYPE}@{COUNTRY}@{STATE}@{ZIPCODE}@{NAME}@{CATEGORY} LIMIT @{fetchCount} OFFSET @{skipCount}",
          "elements": {
            "selector": "@if{type=='brewery'}brewery@else{}BEER@end{}",
            "choices": {
              "BREWERY": {
                "TYPE": "`type`='brewery'",
                "COUNTRY": "@if{country != null && country != ''} AND `country` like '%@{country}%'@end{}",
                "STATE": "@if{state != null && state != ''} AND `state` like '%@{state}%'@end{}",
                "ZIPCODE": "@if{zipcode != null && zipcode != ''} AND `code` like '%@{zipcode}%'@end{}",
                "CATEGORY": "",
                "NAME": "@if{name != null && name != ''} AND `name` like '%@{name}%'@end{}"
              },
              "BEER": {
                "TYPE": "`type`='beer'",
                "COUNTRY": "",
                "STATE": "",
                "ZIPCODE": "",
                "CATEGORY": "@if{category != null && category != ''} AND `category` like '%@{category}%'@end{}",
                "NAME": "@if{name != null && name != ''} AND `name` like '%@{name}%'@end{}"
              }
            }
          }
        },
        "schema": {
          "selector": "@if{type=='brewery'}BREWERY@else{}BEER@end{}",
          "choices": {
            "BREWERY": "JacksonCodec(io.aftersound.weave.schema.samples.Brewery,JSON)",
            "BEER": "JacksonCodec(io.aftersound.weave.schema.samples.Beer,JSON)"
          }
        }
      }
    }
  }
]